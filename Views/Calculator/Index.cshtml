@{
    ViewBag.Title = "Калькулятор по месяцам";
}
@model LoanCalc.ViewModels.LoanView

<main>
    <div>
        @using (Html.BeginForm("checkcalcform", "calculator", FormMethod.Get, 
            new { @class = "form my-4 border bg-light px-4 pt-4 pb-5 col-xl-4 col-lg-6 col-md-8 m-auto" }))
        {
        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Rate, "Ставка в год %", new { @class = "mb-1" })
            @Html.TextBoxFor(m => m.Rate, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Rate)
        </div>
            <div class="form-group mb-3">
                @Html.LabelFor(m => m.Amount, "Сумма займа", new { @class = "mb-1" })
                @Html.TextBoxFor(m => m.Amount, new { @class = "form-control"})
                @Html.ValidationMessageFor(m => m.Amount)
            </div>
            <div class="form-group mt-3">
                @Html.LabelFor(m => m.Duration, "Срок займа", new { @class = "mb-1" })
                @Html.TextBoxFor(m => m.Duration, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Duration)
            </div>
            <div class="form-group pt-5">
                <input type="submit" class="btn btn-primary w-100" value="Рассчитать">
            </div>
        }
    </div>
</main>

<script>
    let inputs = Array.from(document.querySelectorAll('input[type=text]'));
    inputs.map(inp => inp.addEventListener('input', e => {
        let val = e.target.value.replace(/[,/,./,\s,+,:,-,аА-яЯ,aA-zZ]/g, '');
        e.target.value = val;
    }))
</script>
<style id="inert-style">
    [inert] {
        pointer-events: none;
        cursor: default;
    }

        [inert], [inert] * {
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }

    .form {
        border-radius: 5px;
        -webkit-box-shadow: #4a4a4a 4px 4px 25px -15px;
        box-shadow: #4a4a4a 4px 4px 25px -15px;
    }
</style>